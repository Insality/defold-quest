local deftest = require("deftest.deftest")

function init(self)
	deftest.add(require("test.test_quest"))
	deftest.add(require("test.test_quest_events"))
	deftest.add(require("test.test_quest_lifecycle"))
	deftest.add(require("test.test_quest_integration"))

	local is_report = (sys.get_config_int("test.report", 0) == 1)
	deftest.run({ coverage = { enabled = is_report } })
end
